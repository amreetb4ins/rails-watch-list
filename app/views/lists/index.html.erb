<div class="banner">
  <h1>My Watch List</h1>
</div>

<div class="container-index">
  <div class="my-lists">
    <h3>My Lists</h3>
    <%= link_to "Create New List", new_list_path, class: "btn btn-success" %>
  </div>

  <ul class="list-cards">
    <% @lists.each do |list| %>
      <li class="card-list-item">
        <div class="card">
          <div class="card-body">
            <%= link_to list.name, list_path(list), class: "card-title" %>
            <% if list.photo.attached? %>
              <%= image_tag list.photo.variant(resize_to_fill: [600, 600]), class: "card-img-top" %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
